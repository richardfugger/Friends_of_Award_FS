@page "/"
@rendermode InteractiveServer
@using Blazor_WithAuth_ForSWP5
@using Microsoft.AspNetCore.Components.Authorization
@inject MyCustomAuthStateProvider? MyAuthStateProvider
@inject NavigationManager MyNavMgr

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<AuthorizeView>
    <Authorized>
        @if (context.User.IsInRole("Admin"))
        {
            <h3>Willkommen Admin, @context.User.Identity?.Name</h3>

            <NavLink href="/admin">Zur Admin-Seite</NavLink> <br />
            <button @onclick="Logout">Logout</button>
        }
        else
        {
            <h3>Willkommen, @context.User.Identity?.Name</h3>
            <p>Sie sind als normaler Benutzer eingeloggt.</p>
            <button @onclick="Logout">Logout</button>
        }
    </Authorized>

    <NotAuthorized>
        <h3 style="color:red">Sie sind nicht eingeloggt.</h3>
        <button @onclick="@(() => MyNavMgr.NavigateTo("/adminlogin"))">
            Admin Login
        </button>
    </NotAuthorized>
</AuthorizeView>






@code {
    private async Task Logout()
    {
        await ((MyCustomAuthStateProvider)MyAuthStateProvider).LogoutAsync();
        MyNavMgr.NavigateTo("/");
    }
}
